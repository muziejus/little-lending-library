<h1>People</h1>
<div class="row">
  <div class="col-md-4 ">
    <div class="btn-group" role="group" aria-label="...">
      <button type="button" class="btn btn-default"  onClick="map.addLayer(allFeatures);">Show all features</button>
      <button type="button" class="btn btn-default"  onClick="map.removeLayer(allFeatures);">Remove all features</button>
    </div>
    <p>&nbsp;</p>
    {{#static_html}}
      {{{ html_dump }}}
    {{/static_html}}
    {{^static_html}}
    <div class="sidebar-scroll">
      <table class="table table-striped table-hover table-condensed table-responsive">
        <tbody>
          {{#person}}
            <tr>
              <td id="{{ slug }}">
                <a href="/people/{{ id }}">{{ full_name }}</a>
                <small>
                  {{ tags }}
                </small>
                <a href="#" onClick='if(map.hasLayer({{ slug }})){
                    map.removeLayer({{ slug }});
                  } else {
                    map.addLayer({{ slug }});
                  }'>
                  <span class="glyphicon glyphicon-globe" style="color: {{ slug }}Color;" aria-hidden="true"></span></a>
                <a href="#" onClick='if(map.hasLayer({{ slug }})){
                    map.fitBounds({{ slug }}.getBounds());
                    if(1 === 1){
                      map.setZoom(9);
                    }
                  }'>
                  <span class="glyphicon glyphicon-search" aria-hidden="true" style="color: {{ slug }}Color;"></span></a>
                <br>
                <small>
                  ({{ address_count }} addresses, {{ associations_count }} associations)
                </small>  
              </td>
            </tr>
          {{/person}}
        </tbody>
      </table>
    </div>
    {{/static_html}}
  </div>
  {{> partials/map_data}}  
  {{> partials/map }}
</div>
